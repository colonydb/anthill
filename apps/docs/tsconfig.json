{
  "extends": "@total-typescript/tsconfig/bundler/dom",
  "compilerOptions": {
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": { "@/*": ["./src/*"] },
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "src"]
}
