{
  "name": "@colonydb/anthill",
  "version": "0.1.0-2",
  "main": "index.js",
  "repository": "git@github.com:colonydb/anthill.git",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "babel src -d dist --ignore \"src/**/*.stories.js\"",
    "release": "yarn version && git push --tags && open \"https://github.com/colonydb/anthill/releases/new?tag=v$(jq '.version' package.json --raw-output)\"",
    "storybook:build": "build-storybook",
    "storybook:start": "start-storybook -p 6006",
    "test:prettier": "prettier -c src README.md",
    "test": "yarn build && yarn test:prettier && yarn storybook:build"
  },
  "dependencies": {},
  "peerDependencies": {
    "next": "^11.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-storysource": "^6.3.7",
    "@storybook/addon-viewport": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "next": "^11.1.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "storybook-dark-mode": "^1.0.8",
    "styled-jsx": "^4.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ],
      [
        "@babel/preset-env",
        {
          "modules": "cjs",
          "targets": "> 2%"
        }
      ]
    ],
    "plugins": [
      "styled-jsx/babel"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 100,
    "proseWrap": "never",
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
